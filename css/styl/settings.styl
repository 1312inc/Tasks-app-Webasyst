.t-project-settings-colorbox
    div
        a
            display: block;
            padding: 10px;
            line-height: 0;
            border: 1px solid rgba(127,127,127,.2);

        &.t-white
            a
                background: #fff;

        &.t-gray
            a
                background: #eee;

        &.t-yellow
            a
                background: #ffd;

        &.t-green
            a
                background: #dfc;

        &.t-blue
            a
                background: #cef;

        &.t-red
            a
                background: #ffe7e7;

        &.t-purple
            a
                background: #edf;
