.t-project-settings-colorbox
    label
        display: block
        padding: 0.75rem
        line-height: 0
        border-radius 0.25rem
        border 2px solid transparent

        &.t-white
            background: $white_color;
            border-color: $white_color_strong;

        &.t-gray
            background: $gray_color_strong;

        &.t-yellow
            background: $yellow_color_strong;

        &.t-green
            background: $green_color_strong;

        &.t-blue
            background: $blue_color_strong;

        &.t-red
            background: $red_color_strong;

        &.t-purple
            background: $purple_color_strong;

.t-project-workflow-box
    background var(--background-color)
    border-radius 0.5rem
