.t-attach-wrapper

    .t-attached-files-wrapper
        margin: 1rem 0 0

        .t-images-list
            .t-image-item
                position relative
                $image_size = 180px
                display inline-block
                vertical-align top
                margin: 0 .5rem * 2 .5rem * 2 0
                width: $image_size

                &.is-template
                    display none

                .t-image-link
                    display block
                    padding: 0
                    margin: 0 0 .25rem
                    text-align center
                    line-height $image_size
                    background var(--background-color)
                    border: 1px solid rgba(127,127,127,.2);
                    border-radius: 0.25rem
                    font-size 0

                    img
                        max-width 100%
                        max-height $image_size
                        vertical-align middle

                .t-file-name
                .t-file-size
                    display inline-block
                    vertical-align baseline
                    line-height 1.1em
                    font-size 0.8125rem

                .t-file-name
                    margin: .3rem 0 0
                    font-weight bold
                    word-break: break-all;

                .t-file-size
                    display none
                    font-size: .8rem
                    color: #aaa

                .t-file-delete
                    $size = 24px
                    display block
                    position absolute
                    top: -( $size / 2 )
                    right: -( $size / 2 )
                    width $size
                    height $size
                    padding 0.25rem

                    box-shadow 0 0.25rem 0.5rem rgba(0,0,0,0.2)
                    border-radius 50%

                    background #fff url("../img/times-solid.svg") 50% no-repeat
                    background-size ( $size / 2 )

                .t-file-error
                    margin-top 10px
                    display none

        .t-files-list
            margin 1rem 0 2rem

            .t-file-item
                margin: .25rem 0 0

                &.is-template
                    display none

                &:first-child
                    margin-top: 0

                .t-file-link
                    display inline-block
                    padding: .25em .5em

                    .t-file-name
                    .t-file-size
                        display inline-block
                        vertical-align baseline

                    .t-file-name
                        font-size 0.9375rem
                        font-weight bold

                    .t-file-size
                        margin: 0 0 0 .5rem
                        font-size: .8125rem
                        color var(--gray)

                .t-file-delete
                    $delete_size = 20px

                    display inline-block
                    vertical-align bottom
                    width $delete_size
                    height $delete_size
                    margin: 0 0 0 .5em
                    padding 0.125rem

                    box-shadow none
                    border-radius 50%

                    position relative
                    top -4px
                    left -4px

                    background var(--light-gray) url("../img/times-solid.svg") 50% no-repeat
                    background-size ( $delete_size / 2 )

                .t-file-error
                    margin-top 10px
                    display none

    .t-attach-droparea
        position relative
        padding: 13px
        border: 2px dashed var(--border-color-soft)
        border-radius 0 0 0.5rem 0.5rem
        border-top: none
        text-align center
        background var(--background-color)
        color: #aaa;
        transition background 200ms linear
        box-sizing border-box

        &.file-hover
            background var(--background-color-editable)

        input[type="file"]
            position absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            opacity 0
            background #888
            cursor pointer
            text-indent: -9999px
