    .heading i.icon16.darr
        background-position: -144px 0 // .rarr

svg
    &.t-white
        color: $white_color_strongest !important
        background: transparent

    &.t-gray
        color: $gray_color_strongest !important
        background: transparent

    &.t-yellow
        color: $yellow_color_strongest !important
        background: transparent

    &.t-green
        color: $green_color_strongest !important
