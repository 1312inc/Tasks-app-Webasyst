:root {
    --white-color: #fff;
    --gray-color: #f7f7f7;
    --green-color: #f3ffe3;
    --blue-color: #f8ffff;
    --purple-color: #fcf3ff;
    --red-color: #fff1f1;
    --yellow-color: #ffffe3;

    --white-color-strong: rgba(0,0,0,0.06);
    --gray-color-strong: #ddd;
    --green-color-strong: #cea;
    --blue-color-strong: #bef;
    --purple-color-strong: #dcf;
    --red-color-strong: #fcc;
    --yellow-color-strong: #fff7aa;

    --white-color-strongest: rgba(127,127,127,0.5);
    --gray-color-strongest: #888;
    --green-color-strongest: #95ce5d;
    --blue-color-strongest: #51b9dd;
    --purple-color-strongest: #8b77b1;
    --red-color-strongest: #de7c7c;
    --yellow-color-strongest: gold;

    --kanban-fade-from-color: rgba(255, 255, 255, 0);
    --kanban-fade-to-color: rgba(255, 255, 255, 1);

    --button-light-gray-background-color-hover: rgba(0, 0, 0, 0.1);
}

[data-theme="dark"] {
    --white-color: #000;
    --gray-color: #2a2a2a;
    --green-color: #1f3920;
    --blue-color: #1d3245;
    --purple-color: #371d46;
    --red-color: #5d2222;
    --yellow-color: #5b4f18;

    --kanban-fade-from-color: rgba(0, 0, 0, 0);
    --kanban-fade-to-color: rgba(0, 0, 0, 1);

    --button-light-gray-background-color-hover: rgba(255, 255, 255, 0.25);
}

$white_color = var(--white-color);
$gray_color = var(--gray-color);
$green_color = var(--green-color);
$blue_color = var(--blue-color);
$purple_color = var(--purple-color);
$red_color = var(--red-color);
$yellow_color = var(--yellow-color);

$white_color_strong = var(--white-color-strong);
$gray_color_strong = var(--gray-color-strong);
$green_color_strong = var(--green-color-strong);
$blue_color_strong = var(--blue-color-strong);
$purple_color_strong = var(--purple-color-strong);
$red_color_strong = var(--red-color-strong);
$yellow_color_strong = var(--yellow-color-strong);

$white_color_strongest = var(--white-color-strongest);
$gray_color_strongest = var(--gray-color-strongest);
$green_color_strongest = var(--green-color-strongest);
$blue_color_strongest = var(--blue-color-strongest);
$purple_color_strongest = var(--purple-color-strongest);
$red_color_strongest = var(--red-color-strongest);
$yellow_color_strongest = var(--yellow-color-strongest);

smartphoneWidth = 760px
mediumWidth = 1360px

forMobile = "only screen and (max-width: " + smartphoneWidth + ")"
