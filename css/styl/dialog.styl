.dialog-is-shown
    position relative
    height: auto

    #wa
        overflow hidden

    .t-dialog-wrapper
        display block

.t-dialog-wrapper
    display none
    position absolute
    top: 0
    left: 0
    width: 100%
    height: 100vh
    padding: 0 0 0 16rem;
    overflow-y: auto;
    box-sizing border-box
    transition background 200ms linear
    z-index 1

    @media screen and (min-width: 761px) and (max-width: 1440px)
      padding-left 13rem

    @media forMobile
        padding 0

    &.has-ornament
        background var(--new-task-background-overlay-color)
        // backdrop-filter blur(0.25rem)

    .t-dialog-content
        position relative
        top: 64px
        width: 100%
        margin: auto
        background var(--background-color-history)
        box-shadow 0 1rem 2.5rem -1rem var(--dialog-shadow-color)
