h2
  @media forMobile
    font-size 1.5rem

.loading, .loading:after
  border-radius 50%
  width 10em
  height 10em

.loading
  display block
  margin 120px auto 0 auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 1.1em solid rgba(255, 255, 255, 0.2)
  border-right 1.1em solid rgba(255, 255, 255, 0.2)
  border-bottom 1.1em solid rgba(255, 255, 255, 0.2)
  border-left 1.1em solid #EEE
  transform translateZ(0)
  animation load8 1.1s infinite linear

@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

.sidebar.width-26rem
  @media forMobile
    width 100%

.drawer-block
  h1
    margin-bottom 2rem

.article .article-body
  @media forMedium
    padding 3rem

  @media forMobile
    padding 2rem 1rem

.prettyprint
  border 0 !important
  overflow auto
  background var(--background-color-blockquote)
  color var(--text-color-strong)
  border-radius 0.25rem
  padding 0.4rem !important

  code
    width 0
    display block
    padding 0

.t-project-icon

  .icon
      vertical-align 0.125rem
      width 1.25rem
      height 1.25rem

      *
        width 1.25rem
        height 1.25rem

.list > .item a
  position relative

.list > .item,
.t-comment-item
  a
    .t-project-icon
      position absolute
      top 2.6125rem
      left 2.75rem
      border-radius 0.375rem
      padding 0.125rem
      background var(--white)
      line-height 1rem

.t-project-icon-rounded
  border-radius 0.25rem

.t-status-icon-open
  color var(--green) !important

.t-status-icon-closed
  color var(--gray) !important

.t-scopes
  .progressbar
    margin 0.5rem 0 0.25rem

    .progressbar-line-wrapper
      .progressbar-outer
        .progressbar-inner
          min-height 4px

// Kanban section
.t-kanban
  height calc(100vh - 10rem)
  width 100%
  max-width calc(100vw - 17rem)
  overflow-x auto
  overflow-y hidden
  margin 1rem

  @media forMobile
    height 90vh
    max-width calc(100vw - 2rem)

  &__list
    position relative
    // overflow hidden
    background-color var(--background-color-input-solid)
    min-width 300px
    border-radius 0.25rem

    @media forMobile
      min-width 280px

    &__body
      height calc(100% - 5rem)
      overflow-y auto
      overflow-x hidden

      &__item
        // background-color var(--white)
        cursor move
        transition 0.1s
        border-radius 0.25rem
        font-size 0.9375rem

        &:hover
          box-shadow 0 0.125rem 0.75rem -0.125rem rgba(0, 0, 0, 0.1)
          transform translateY(-1px)

        a
          color var(--text-color)

          &:hover
            background var(--background-color-editable)

      &__footer
        color var(--blue)
        text-align center
        min-height 24px

        span
          display inline-block
          padding 1rem

    &__fade
      position absolute
      left 0
      bottom 0
      width 100%
      height 100px
      background linear-gradient(180deg, var(--kanban-fade-from-color) 0%, var(--kanban-fade-to-color) 100%)

.t-comment-item-wrapper
  display flex

  &--right
    justify-content flex-end

  .t-comment-item
    width 80%
    border-radius 0.5rem
    padding 0.75rem
    background var(--background-color)

    .details
      margin-top -0.25rem
      flex-grow 1

    .t-comment-content
      p:last-child
        margin-bottom 0

    &.t-pinned-comment
        background var(--highlighted-blue)

    @media forMobile
        width 85%

.t-pinned-comment
    background var(--highlighted-blue)
    border-radius 0.25rem
    color var(--text-color-strong) !important
    padding 0.5rem 0.75rem
    word-break break-word

    .icon
        font-size 1rem

.t-task-embedded-block
    padding 0.75rem 1rem
    border-radius 1rem
    background var(--background-color)

.redactor-box.redactor-styles-on
    border-width 2px !important
    border-radius 0.25rem !important
    border-bottom-color transparent !important

.collapsible
  margin-bottom: 2rem

  &__content
    :last-child
      margin-bottom: 0 !important

  .heading
    cursor pointer

    span
      .caret svg
        transition .3s transform

      &.collapsed
        .caret svg
          transform: rotate(-90deg)

.button.light-gray
    &:hover
        background var(--button-light-gray-background-color-hover)

.t-tags-hidden-tag
    display none

.t-due-date-hint-red
    color var(--red)
    font-weight bold

.t-due-date-hint-yellow
    color var(--yellow)
    font-weight bold

.t-due-date-hint-green
    color var(--text-color)
    font-weight 500

.t-task-flag-box
    @media forMobile
        flex 1

    .t-task-flag-box-content
        @media forMobile
            background var(--background-color)
            padding 0.5rem 1rem
            border-radius 0.25rem
            margin-top 1rem

.t-task-header-content
    @media forMobile
        margin-bottom 0.75rem

.ui-menu .ui-menu-item
  color var(--menu-link-color) !important
  padding 0.5rem 1rem !important
  border-radius 0px !important
  border 0 !important
  font-size 0.8rem !important
  font-weight normal !important

  &:hover, &.ui-state-focus
    margin 0
    font-weight normal !important
    background-color var(--accent-color)
    color #fff !important


@keyframes rotate
  to
    transform rotate(360deg)

@keyframes opa
  from
    opacity 0

  to
    opacity 1

.button
  &.button--loading
    position relative
    transition: none

    &:after
      position absolute
      top calc(50% - 8px)
      left 0.75rem
      display inline-block
      content ''
      width 16px
      height 16px
      animation opa 1s linear, rotate 1s linear infinite
      background-image url('data:image/svg+xml;base64,')
      background-size contain

    svg
      opacity 0

.sidebar
  .t-header-wrapper
    #t-menu-dropdown-tag
      position initial
