h2
  @media forMobile
    font-size 1.2rem

.loading, .loading:after
  border-radius 50%
  width 10em
  height 10em

.loading
  display block
  margin 120px auto 0 auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 1.1em solid rgba(255, 255, 255, 0.2)
  border-right 1.1em solid rgba(255, 255, 255, 0.2)
  border-bottom 1.1em solid rgba(255, 255, 255, 0.2)
  border-left 1.1em solid #EEE
  transform translateZ(0)
  animation load8 1.1s infinite linear

@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

.sidebar.width-25rem
  @media forMobile
    width 100%

.drawer-block
  h1
    margin-bottom 2rem

.article .article-body
  @media forMedium
    padding 3rem

  @media forMobile
    padding 2rem 1rem

.prettyprint
  border 0 !important
  overflow auto
  background var(--background-color-blockquote)
  color var(--text-color-strong)
  border-radius 0.25rem
  padding 0.4rem !important

  code
    width 0
    display block
    padding 0

.list > .item a
  position relative

.list > .item,
.t-comment-item
  a
    .t-project-icon
      position absolute
      top 2.6125rem
      left 2.75rem
      border-radius 0.375rem
      padding 0.125rem
      background var(--white)
      line-height 1rem

      .icon
        vertical-align 0.125rem
        width 1.25rem
        height 1.25rem

        *
          width 1.25rem
          height 1.25rem

.t-project-icon-rounded
  border-radius 0.25rem

.t-status-icon-open
  color var(--green) !important

.t-status-icon-closed
  color var(--gray) !important

.t-scopes
  .progressbar
    margin 0.5rem 0 0.25rem

    .progressbar-line-wrapper
      .progressbar-outer
        .progressbar-inner
          min-height 4px

// Kanban section
.t-kanban
  height calc(100vh - 10rem)
  width 100%
  max-width calc(100vw - 17rem)
  overflow-x auto
  overflow-y hidden
  margin 1rem

  @media forMobile
    height 90vh
    max-width calc(100vw - 2rem)

  &__list
    position relative
    // overflow hidden
    background-color var(--background-color-input-solid)
    min-width 300px
    border-radius 0.25rem

    @media forMobile
      min-width 280px

    &__body
      height calc(100% - 5rem)
      overflow-y auto
      overflow-x hidden

      &__item
        // background-color var(--white)
        cursor move
        transition 0.3s box-shadow
        border-radius 0.25rem

        &:hover
          box-shadow 1px 1px 2px rgba(0, 0, 0, 0.1)

        a
          color var(--text-color)

      &__footer
        color var(--blue)
        text-align center

        span
          display inline-block
          padding 1rem

    &__fade
      position absolute
      left 0
      bottom 0
      width 100%
      height 100px
      background linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%)

.t-comment-item-wrapper
  display flex

  &--right
    justify-content flex-end

  .t-comment-item
    width 70%
    border-radius 1rem
    padding 0.75rem
    background var(--background-color)

    .details
      margin-top -0.25rem
      flex-grow 1

    .t-comment-content
      p:last-child
        margin-bottom 0

    &.t-pinned-comment
        background var(--highlighted-blue)
        box-shadow 0 0.5rem 1rem -0.75rem rgba(0,0,0,0.1), 0 0.5rem 0.5rem -0.5rem rgba(0,0,0,0.2)

.t-pinned-comment
    background var(--highlighted-blue)
    border-radius 0.25rem
    color var(--text-color-strong) !important

.t-task-embedded-block
    padding 0.75rem 1rem
    border-radius 1rem
    background var(--background-color)

.redactor-box.redactor-styles-on
    border-width 2px !important

.collapsible
  margin-bottom: 2rem

  &__content
    :last-child
      margin-bottom: 0 !important

  .heading
    cursor pointer

    span
      .caret svg
        transition .3s transform

      &.collapsed
        .caret svg
          transform: rotate(-90deg)
