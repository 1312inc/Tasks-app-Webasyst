.t-general-menu
    padding 0.75rem 0.75rem 0.5rem

    #t-filters-toggle
        svg
            transition 0.2s
        &.upsidedown
            svg
                transform rotate(180deg)

    .t-filters-wrapper
        display none

        &.is-shown
            display block

        .is-empty
            a
                color var(--gray)

.t-my-lists-wrapper
    display none

.t-selection-menu
    padding 0.8rem 1rem
    position sticky
    top 0
    z-index 99
    background var(--background-color-blank)
    display none

    &.is-shown
        display block

.t-selected-item
    .is-bold
        font-weight bold

.t-menu-item
    .icon.size-20
        font-size 1rem !important
